@{
    ViewData["Title"] = "管理員變更密碼";
    Layout = "~/Views/Shared/_AdministratorLayout.cshtml";
}

<div class="container">
    <div class="text-center mt-5">
        <h1 class="text-info font-weight-normal mb-3">變更密碼</h1>
        <div class="row align-items-center justify-content-center">
            <div class="col-md-4">
            </div>
        </div>
    </div>
    <div class="row align-items-center justify-content-center">
        <div class="col-md-4">
            <form asp-action="UpdatePassword">
                <div class="form-group">
                    <label for="password">舊密碼<span class="required">*</span></label>
                    <input type="password" id="oldpassword" name="oldPassword" class="form-control" required>
                </div>
                <div class="form-group">
                    <div class="d-flex inline-flex">
                        <label for="password">新密碼<span class="required">*</span></label>
                        <small class="form-text text-muted ml-auto">密碼長度應介於6~20位</small>
                    </div>
                    <input type="password" id="newpassword" name="newPassword" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">確認新密碼<span class="required">*</span></label>
                    <input type="password" id="confirmnewpassword" name="confirmPassword" class="form-control" required>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                    <button type="submit" class="btn btn-outline-info px-3">確認變更</button>
                </div>
            </form>
        </div>
    </div>
</div>

@{
    bool updateAdministratorPasswordSuccess = TempData["UpdateAdministratorPasswordSuccess"] as bool? ?? false;
    bool updateAdministratorPasswordError = TempData["UpdateAdministratorPasswordError"] as bool? ?? false;

    if (updateAdministratorPasswordSuccess)
    {
        <script type="text/javascript">
            $(function () {
                alert('修改密碼成功！');
            });
        </script>
    }

    if (updateAdministratorPasswordError)
    {
        <script type="text/javascript">
            $(function () {
                alert('修改密碼失敗！請重新嘗試。');
            });
        </script>
    }
}
